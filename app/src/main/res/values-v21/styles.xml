<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:colorAccent">@color/accentColor</item>
        <item name="android:actionModeBackground">@color/primaryColorDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/primaryColorDark</item>
    </style>

    <style name="material_textviews_style" parent="material_textviews_style.Base">
        <item name="android:elevation">4dp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <!-- Settings activity theme. -->


    <style name="tabs_activity_theme" parent="tabs_activity_theme.base">
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
    </style>

    <style name="ListViewTheme" parent="ListViewTheme.Base">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorControlHighlight">@color/ripple_material_light</item>
    </style>

    <style name="detail_text_view" parent="detail_text_view.base">
        <item name="android:elevation">4dp</item>
    </style>
</resources>