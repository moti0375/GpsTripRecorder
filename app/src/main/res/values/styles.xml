<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/ic_launcher</item>
        <item name="actionModeBackground">@color/primaryColor</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="ListViewTheme.Base" parent="AppTheme.Base">
        <item name="android:activatedBackgroundIndicator">@drawable/activated_list_background</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/primaryColorDark</item>
    </style>

    <style name="ListViewTheme" parent="ListViewTheme.Base">

    </style>

    <style name="ListViewItem" parent="android:Theme.Holo">
        <item name="android:background">@drawable/gradient_bg</item>
    </style>


    <style name="MyCustomToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@color/primaryColorDark</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
    </style>

    <style name="material_textviews_style.Base" parent="AppTheme.Base">
        <item name="android:background">@drawable/material_textview</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="material_textviews_style" parent="material_textviews_style.Base">
        <item name="elevation">4dp</item>
    </style>

    <style name="tabs_activity_theme.base" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_launcher</item>
    </style>

    <style name="tabs_activity_theme" parent="tabs_activity_theme.base">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
    </style>

    <style name="detail_text_view.base" parent="AppTheme.Base">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@drawable/details_textview</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detail_text_view" parent="detail_text_view.base">

    </style>

    <style name="detail_left_text_view.base" parent="detail_text_view.base">
        <item name="android:background">@drawable/details_textview_left</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="detail_left_text_view" parent="detail_left_text_view.base">

    </style>


    <style name="detail_right_text_view.base" parent="detail_text_view.base">
        <item name="android:background">@drawable/details_textview_right</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="detail_right_text_view" parent="detail_right_text_view.base">

    </style>


    <style name="SettingsTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.V14.Sunshine.NoTitle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
